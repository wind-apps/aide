{
  "extends": "@electron-toolkit/tsconfig/tsconfig.node.json",
  "compilerOptions": {
    "composite": true,
    "paths": {
      "@main/*": ["./src/main/*"]
    },
    "types": [
      "electron-vite/node",
      "./env.d.ts"
    ],
    "skipDefaultLibCheck": true,
    "skipLibCheck": true
  },
  "include": [
    "electron.vite.config.*",
    "src/main/**/*",
    "src/preload/*"
  ]
}
